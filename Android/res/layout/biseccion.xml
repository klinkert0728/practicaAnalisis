<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#f5f5f5"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="10dp"
        android:layout_y="18dp"
        android:textSize="20dp"
        android:text="F(X)=" />

    <EditText
        android:id="@+id/funcion"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:layout_x="65dp"
        android:layout_y="10dp"
        android:ems="10"
        android:inputType="text|textMultiLine" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/calcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="107dp"
        android:layout_y="384dp"
        android:onClick="calcular"
        android:text="Calcular" />

    <EditText
        android:id="@+id/resultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="44dp"
        android:layout_y="267dp"
        android:ems="10"
        android:hint="Resultado"
        android:inputType="numberDecimal|text" />

    <EditText
        android:id="@+id/X0"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:layout_x="10dp"
        android:layout_y="94dp"
        android:ems="10"
        android:hint="X0"
        android:inputType="numberDecimal|numberSigned|text" />

    <EditText
        android:id="@+id/tol"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:layout_x="216dp"
        android:layout_y="94dp"
        android:ems="10"
        android:hint="Tol"
        android:inputType="numberDecimal|text" />

    <EditText
        android:id="@+id/X1"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:layout_x="117dp"
        android:layout_y="94dp"
        android:ems="10"
        android:hint="X1"
        android:inputType="numberDecimal|text" />

</AbsoluteLayout>
