<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#f5f5f5"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:text="Métodos Numéricos App"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#93cf5a"
        android:textSize="25dp" />

    <Button
        android:id="@+id/Interpolacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/SistEcuaciones"
        android:layout_below="@+id/SistEcuaciones"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="14dp"
        android:textColor="#93cf5a"
        android:background="#f5f5f5"
         android:onClick="Interp"
        android:text="Interpolación" />

    <Button
        android:id="@+id/SistEcuaciones"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/UnaVariable"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="#f5f5f5"
        android:onClick="SistEcua"
        android:text="Sistemas De Ecuaciones"
        android:textColor="#93cf5a" />

    <Button
        android:id="@+id/UnaVariable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/SistEcuaciones"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="65dp"
        android:background="#f5f5f5"
        android:onClick="UnaVar"
        android:text="Ecuaciones De Una Variable"
        android:textColor="#93cf5a" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/SistEcuaciones"
        android:layout_below="@+id/Interpolacion"
        android:layout_marginTop="18dp"
        android:background="#f5f5f5"
        android:onClick="Integ"
        android:text="Interpolación e Integración"
        android:textColor="#93cf5a" />

</RelativeLayout>
