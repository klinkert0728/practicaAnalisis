<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.metodosanalisis.Eliminacion_Gauss"
    tools:ignore="MergeRootFrame" >

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:onClick="calcular"
        android:text="Calcular" />

    <CheckBox
        android:id="@+id/SinPivoteo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="Sin Pivoteo" />

    <CheckBox
        android:id="@+id/PivoteoParcial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SinPivoteo"
        android:layout_marginTop="14dp"
        android:layout_toLeftOf="@+id/button1"
        android:text="Pivoteo Parcial" />

    <CheckBox
        android:id="@+id/PivoteoTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/PivoteoParcial"
        android:layout_alignParentRight="true"
        android:layout_marginRight="34dp"
        android:text="Pivoteo Total" />

    <CheckBox
        android:id="@+id/PivoteoEscalonado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/PivoteoParcial"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="PivoteoEscalonado" 
        />

</RelativeLayout>