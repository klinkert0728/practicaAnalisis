<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.metodosanalisis.Eliminacion_Gauss"
    tools:ignore="MergeRootFrame" >

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <CheckBox
            android:id="@+id/SinPivoteo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/SinPivoteo" />

        <CheckBox
            android:id="@+id/PivoteoParcial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/PivoteoParcial" />

        <CheckBox
            android:id="@+id/PivoteoEscalonado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/PivoteoEscalonado" />

        <CheckBox
            android:id="@+id/PivoteoTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/PivoteoTotal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical" >

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    <TableLayout
                        android:id="@+id/tableLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" >
                    </TableLayout>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>


        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:onClick="calcular"
            android:layout_marginLeft="100dp"
            android:text="@string/calcular" />
    </LinearLayout>

</ScrollView>