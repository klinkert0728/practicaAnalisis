<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.metodosanalisis.Eliminacion_Gauss"
    tools:ignore="MergeRootFrame" >

    <RadioButton
        android:id="@+id/SinPivoteo"
        android:layout_width="99dp"
        android:layout_height="47dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/PivoteoTotal"
        android:layout_marginLeft="14dp"
        android:text="Sin Pivoteo" />

    <RadioButton
        android:id="@+id/PivoteoTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/PivoteoParcial"
        android:layout_marginTop="16dp"
        android:text="Pivoteo Total" />

    <RadioButton
        android:id="@+id/PivoteoParcial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/SinPivoteo"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="32dp"
        android:text="Pivoteo Parcial" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:text="Calcular" 
        android:onClick="calcular"/>

</RelativeLayout>

