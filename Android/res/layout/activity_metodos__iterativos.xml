<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.metodosanalisis.Metodos_Iterativos"
    tools:ignore="MergeRootFrame" >

    <Button
        android:id="@+id/calcular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="47dp"
        android:text="Calcular" 
        android:onClick="calcular"/>

    <CheckBox
        android:id="@+id/GaussSeidel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Jacobi"
        android:layout_alignBottom="@+id/Jacobi"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="28dp"
        android:text="GaussSeildel" />

    <CheckBox
        android:id="@+id/Jacobi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:layout_toRightOf="@+id/calcular"
        android:text="Jacobi" />

</RelativeLayout>

